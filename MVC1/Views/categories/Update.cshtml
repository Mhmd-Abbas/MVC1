@model Category

<form method="post" action="/categories/change">
	<div class="mb-3">
		<input type="hidden" name="id" for="cId" value= @Model.Id />
		<br />
		<label for="cName" class="form-label">Category Name</label>
		<input type="text" name="name" value="@Model.Name" class="form-control" id="name" placeholder="Enter Category Name ...">
		<span class="text-danger" asp-validation-for="Name"></span>
		<br />
		<label for="cDescription" class="form-label">Category Description</label>
		<input type="text" name="description" value="@Model.Description" class="form-control" id="description" placeholder="Enter Category Description ...">
		<span class="text-danger" asp-validation-for="Description"></span>
	</div>

	<button class="btn btn-outline-info" type="submit">Update</button>

</form>